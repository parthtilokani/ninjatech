<!-- static/src/components/notification_icon/notification_icon.xml -->
<templates xml:space="preserve">
    <t t-name="property_management_helpdesk.NotificationIconTemplate" >
        <div>something</div>
        <t t-if="state.unreadCount > 0">
            <div class="position-relative d-inline-block ms-2" t-on-click="onClick">
                <i class="fa fa-bell fs-5 text-primary"/>
                <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">
                    <t t-esc="state.unreadCount"/>
                </span>
            </div>
        </t>
    </t>
</templates>